<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.bibt.data.mapper.TestMapper">

    <!--基本返回结构-->
    <resultMap id="BaseResultMap" type="org.bibt.data.domain.TestDomain">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="content" property="content" jdbcType="VARCHAR" />
    </resultMap>

    <!--基本列-->
    <sql id="Base_Column_List" >
        id, content
    </sql>

    <!--新增实体-->
    <insert id="addDomain" parameterType="org.bibt.data.domain.TestDomain">
        INSERT INTO test(id, content) VALUES(#{id}, #{content});
    </insert>

    <!--列表实体-->
    <select id="listDomain" resultType="org.bibt.data.domain.TestDomain">
        SELECT * FROM test;
    </select>

    <!--获取实体-->
    <select id="getDomain" resultType="org.bibt.data.domain.TestDomain">
        SELECT * FROM test WHERE id=#{id};
    </select>

    <!--更新实体-->
    <update id="updateDomain">
        UPDATE test SET content=#{content} WHERE id=#{id}
    </update>

    <!--删除实体-->
    <delete id="deleteDomain">
        DELETE FROM test WHERE id=#{id}
    </delete>

</mapper>